<?xml version="1.0"?>
<config>
    <sections>
        <shipping translate="label" module="shipping">
            <groups>
                <dropship translate="label">
                    <label>Drop Ship</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <allow translate="label">
                            <label>Allow Drop Shipping</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </allow>
                        <supplier_new_order_email_template translate="label">
                            <label>New Order Email Template For Supplier</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </supplier_new_order_email_template>
                        <supplier_delivered_shipment_email_template translate="label">
                            <label>Delivered Notify Email Template For Supplier</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>32</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </supplier_delivered_shipment_email_template>
                        <customer_delivered_shipment_email_template translate="label">
                            <label>Delivered Notify Email Template For Supplier</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </customer_delivered_shipment_email_template>
                    </fields>
                </dropship>
            </groups>
        </shipping>
    </sections>
</config>
