<?xml version="1.0"?>
<config>
    <modules>
        <TDK_DropShip>
            <version>0.1.2</version>
        </TDK_DropShip>
    </modules>
    <global>
        <fieldsets>
            <sales_convert_quote_item>
                <supplier_id>
                    <to_order_item>*</to_order_item>
                </supplier_id>
            </sales_convert_quote_item>
        </fieldsets>
        <models>
            <tdk_dropship>
                <class>TDK_DropShip_Model</class>
                <resourceModel>tdk_dropship_resource</resourceModel>
            </tdk_dropship>
            <tdk_dropship_resource>
                <class>TDK_DropShip_Model_Resource</class>
                <entities>
                    <supplier>
                        <table>dropship_supplier</table>
                    </supplier>
                    <supplier_product>
                        <table>dropship_supplier_product</table>
                    </supplier_product>
                    <supplier_order>
                        <table>dropship_supplier_order</table>
                    </supplier_order>
                </entities>
            </tdk_dropship_resource>
            <sales>
                <rewrite>
                    <quote_address>TDK_DropShip_Model_Rewrite_Sales_Quote_Address</quote_address>
                </rewrite>
            </sales>
        </models>
        <blocks>
            <tdk_dropship>
                <class>TDK_DropShip_Block</class>
            </tdk_dropship>
        </blocks>
        <helpers>
            <tdk_dropship>
                <class>TDK_DropShip_Helper</class>
            </tdk_dropship>
        </helpers>
        <resources>
            <tdk_dropship_setup>
                <setup>
                    <module>TDK_DropShip</module>
                </setup>
            </tdk_dropship_setup>
        </resources>
    </global>
    <frontend>
        <events>
            <sales_order_place_after>
                <observers>
                    <tdk_dropship>
                        <type>singleton</type>
                        <class>tdk_dropship/observer</class>
                        <method>salesOrderPlaceAfter</method>
                    </tdk_dropship>
                </observers>
            </sales_order_place_after>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <TDK_DropShip before="-">TDK_DropShip_Admin</TDK_DropShip>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <tdk_dropship>
                    <file>tdk_dropship.xml</file>
                </tdk_dropship>
            </updates>
        </layout>
    </adminhtml>
</config>